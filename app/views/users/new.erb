<body>
  <h1>Log in</h1>

  <% if flash[:error] %>
    <div id='notice'><%= flash[:error] %></div>
  <% end %>

  <form action='/users' method='POST'>
    <p>Username: <input type='text' name='username' value='<%= @user.username %>'>
    <p>Email: <input type='text' name='email' value='<%= @user.email %>'>
    <p>Password: <input type='password' name='password'>
    <p>Password Confirmation: <input type='password' name='password_confirmation'>
    <p><input type="submit" value="Sign up">
  </form>

</body>
